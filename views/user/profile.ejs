<%- layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row offset-sm-1 offset-md-2 offset-lg-3 mt-4">

            <h1>Profile</h1>
            <form method="POST" action="/profile?_method=PUT" class="mt-3 col-md-9 needs-validation" novalidate>

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="user[name]" class="form-control noWhiteSpace" id="name"
                        value="<%=currUser.name%>" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" class="form-control noWhiteSpace" name="user[email]" disabled
                        value="<%=currUser.email%>" required>
                </div>

                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Phone Number</label>
                    <input type="tel" pattern="[0-9]{10}" placeholder="Enter a 10-digit phone number" id="phoneNumber" class="form-control noWhiteSpace" name="user[phoneNumber]" value="<%=currUser.phoneNumber%>" required>
                </div>

                

                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">User type</label>
                    <select class="form-select" id="inputGroupSelect01" name="user[userType]"   required>
                        <option value="" selected disabled hidden>Choose...</option>
                        <option value="viewer">viewer</option>
                        <option value="lister">lister</option>
                    </select>
                </div>


                <button class="btn btn-success" type="submit">Submit</button>
                &nbsp;&nbsp;
                <a href="/listings" class="btn btn-secondary">Skip</a>
            </form>
            
        </div>
    </body>